<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/red"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="dcioicjdo"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        style="@style/englishText"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tvDay"
        app:layout_constraintBottom_toBottomOf="@+id/tvDay"
        app:layout_constraintEnd_toStartOf="@+id/tvMaxTemp"
        android:layout_marginEnd="36dp"
        android:id="@+id/ivWeather"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay"
        app:layout_constraintEnd_toStartOf="@+id/tvMinTemp"
        android:id="@+id/tvMaxTemp"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:maxLength="5"
        style="@style/englishText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/tvMinTemp"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDay"
        tools:text="dfefrfefre"
        android:textSize="20sp"
        android:maxLength="5"
        style="@style/englishText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>