<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/red"
    >

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rightSpace"
        android:id="@+id/ivHourly"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/ivHourly"
        app:layout_constraintRight_toRightOf="@+id/ivHourly"
        app:layout_constraintTop_toBottomOf="@+id/ivHourly"
        android:id="@+id/tvTemp"
        tools:text="csdf"
        android:textSize="13sp"
        android:textColor="@color/primaryTextColor"
        style="@style/englishText"
        android:maxLength="3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/ivHourly"
        app:layout_constraintRight_toRightOf="@+id/ivHourly"
        app:layout_constraintTop_toBottomOf="@+id/tvTemp"
        android:id="@+id/tvHour"
        tools:text="hooiho"
        android:textColor="@color/secondaryTextColor"
        style="@style/englishText"
        android:maxLength="2"
        />

    <Space
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/rightSpace"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>